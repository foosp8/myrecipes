<%= render 'shared/page_title', a: "Chef #{@chef.chefname}'s profile" %>
<div class="well col-md-8 col-md-offset-2">
  <h4 class="center description"><strong>My Status: </strong></h4>

  Name: <b><%= @chef.chefname.capitalize %> </b> <br>
  Email: <i><%= simple_format@chef.email %></i>
  <hr/>
</div>
<div class="chef-actions">
    <% if logged_in? && current_chef == @chef %>
    <%= link_to "Edit this chef", edit_chef_path(@chef), class: 'btn btn-xs btn-warning' %>
    <%= link_to "Back to chef listing", chefs_path, class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this chef", chef_path(@chef), method: :delete, data: { confirm: "Are you sure you want to delete this Chef and all associated recipes?"}, class: "btn btn-xs btn-danger" %>
  <% end %>
</div>  


<div class="well col-md-8 col-md-offset-2">
  <% if @chef.recipes.count != 0 %>

    <p class="center">
       <b><h4> Created recipes as below: </h4><b>
    <p>
      <div align="center">
        <%= will_paginate @chef_recipes %>
      </div>

    <%= render 'recipes/recipe', obj: @chef_recipes %>

    <div align= 'center'>
      <%= will_paginate @chef_recipes %>
    </div>

  <% else %>
    <h4 align = "center"> No recipe yet! </h4>
  <% end %>
</div>
